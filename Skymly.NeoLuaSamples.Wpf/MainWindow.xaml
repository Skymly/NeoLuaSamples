<Window x:Class="Skymly.NeoLuaSamples.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Skymly.NeoLuaSamples.Wpf"
        mc:Ignorable="d"  x:Name="window"
        xmlns:skymly="https://github.com/Skymly"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <skymly:LuaConverter x:Key="LuaConverter"></skymly:LuaConverter>
        <skymly:LuaMultiConverter x:Key="LuaMultiConverter"></skymly:LuaMultiConverter>
    </Window.Resources>
    <Grid>

        <StackPanel>
            <TextBlock FontSize="36" >
                <TextBlock.Text>
                    <MultiBinding  Converter="{StaticResource LuaMultiConverter}" ConverterParameter="return '面积是' .. values[0] * values[1]">
                        <Binding  ElementName="window" Path="ActualWidth" Delay="50" Mode="OneWay"/>
                        <Binding  ElementName="window" Path="ActualHeight" Delay="50" Mode="OneWay"/>
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>
